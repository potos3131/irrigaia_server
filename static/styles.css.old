@import "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css";

body, html {
  height: 100%;
    margin: 0;
    padding: 0;
      scroll-behavior: smooth;

}

.bg {
  /* The image used */
  background-image: url("dripirrigation.jpg");

  /* Full height */
  height: 70%;

  /* Create the parallax scrolling effect */
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
    margin: 0 auto; /* Center it */

}

.slogan{
    color: #e1ff2f;
    font-size: 100px;
    opacity: 0.75;
}

.login-box {
    width:280px ;
    position: relative;
    top: 50%;
    left:50%;
    transform: translate(-50% , -50%);
    color:white;
}
.login-box h1{
    color:#f6ff79;
    float: left;
    font-size: 40px;
    border-bottom: 6px solid #f6ff79;
    margin-bottom: 50px;
    padding: 13px;
}
.textbox {
    width: 100%;
    overflow: hidden;
    font-size: 20px;
    padding: 8px 0;
    margin: 8px 0;
    border-bottom: 1px solid #f6ff79 ;
}

.textbox i{
    width: 26px;
    float:left;
    text-align: center;
}

.textbox input{
    border:none;
    outline: none;
    background: none;
    color:white;
    font-size: 20px;
    width: 80%;
    float:left;
    margin: 0 10px;
}
.textbox placeholder{
    color:white;

}
.button {
    width : 100%;
    /*background: none;*/
    border:2px solid #f6ff79;
    color : white ;
    padding: 5px;
}
.h2
{
    width:100%;
    color: #f6ff79;
}
.section_title {
font-family: "Merriweather", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
font-size: 1rem;
font-weight: 400;
line-height: 1.5;
color: #212529;
text-align: left;
}
.container {
    background: white;
    display: flex;
    align-content: flex-start ;
    width: 100%;
padding-right: 15px;
padding-left: 15px;
margin-right: auto;
margin-left: auto;
}

.section_howitworks{
    display: flex;
     flex-flow: row wrap;
 margin: auto;
font-family: "Merriweather", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
font-size: 1rem;
font-weight: 400;
line-height: 1.5;
color: #212529;
text-align: left;
background: #23ccc1;
opacity: 90%;
}

img {
    radius: 1%;
    width:80%;
    height: 50%;
    vertical-align: center;
    border-style: none;

    height: auto;
    background: white;
    border-radius: 1%;
    color: white;
    padding: 1em;
}


